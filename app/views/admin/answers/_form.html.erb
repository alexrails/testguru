<%= form_with model: [:admin, @question, @answer], local: true do |f| %>

  <%= render 'errors' %>

  <p><%= f.label :body %></p>
  <p><%= f.text_area :body, id: :answer_body, rows: 7, cols: 60 %></p>

  <p>
    <%= f.label :correct %>
    <%= f.check_box :correct, id: :answer_correct %>
  </p>

  <p><%= f.submit "Сохранить", class: 'btn btn-light' %></p>
<% end %>

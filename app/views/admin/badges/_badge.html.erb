<tbody>
  <tr>
    <td class="align-middle"><%= badge.id %></td>
    <td class="align-middle"><%= badge.name %></td>
    <td class="align-middle"><%= image_tag("badges/#{badge.img_url}", size: '64x64') %></td>
    <td class="align-middle"><%= badge.rule %></td>
    <td class="align-middle"><%= link_to 'Edit', edit_admin_badge_path(badge) %></td>
    <td class="align-middle"><%= link_to 'Delete', admin_badge_path(badge), method: :delete,
      data: { confirm: 'You sure?' } %></td>
  </tr>
</tbody>

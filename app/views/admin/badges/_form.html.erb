<%= form_with model: [:admin, @badge], local: true do |form| %>

  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :img_url %>
    <%= form.text_field :img_url, id: :badge_img %>
  </div>

  <div class="form-group">
    <%= form.label :rule %>
    <%= form.select :rule, Badge.rules.keys.map { |w| [w.humanize, w] }, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create achievement', class: 'btn btn-success' %>
  </div>

<% end %>

<h1>Listening questions</h1>

<table>
  <thead>
    <tr>
      <th>Test_id</th>
      <th>Question</th>
    </tr>
  </thead>

  <% @test.questions.each do |question| %>
    <tr>
      <td><%= question.test_id %></td>
      <td><%= question.body %></td>
      <td><%= link_to 'Delete question', admin_question_path(question),
        method: :delete,
        data: { confirm: "You sure?"  } %></td>
    </tr>
  <% end %>
  </table>


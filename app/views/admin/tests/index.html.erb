<div class="container">
<h1><%= t('.header') %></h1>
<p>
  <%= link_to t('.new_test'), new_admin_test_path, class: 'btn btn-light' %>
</p>
  <%= render 'layouts/errors', resource: @test %>
<table class="table">
  <thead class="thead-dark">
    <tr class="text-center">
      <th scope="col" class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th scope="col"><%= t('.level') %></th>
      <th scope="col"><%= t('.question_count') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>

  <%= render @tests %>

  </table>
</div>

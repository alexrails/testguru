<% if @answer.errors.present? %>
    <div>
      <h2>Errors detected:</h2>
      <h2><%= pluralize(@answer.errors.count, 'error') %> detected:</h2>

      <ul>
          <% @answer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  <% end %>


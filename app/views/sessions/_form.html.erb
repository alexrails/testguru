<%= form_with url: sessions_path, local: true do |f| %>
  <% if flash[:alert] %>
    <%= content_tag :p, flash[:alert], class: 'flash alert' %>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, id: :name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.number_field :email, id: :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password, id: :password %>
  </p>

  <p><%= f.submit 'Enter' %></p>
<% end %>

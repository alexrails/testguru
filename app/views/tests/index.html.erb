<h1>Tests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Level</th>
      <th colspan=3>Actions</th>
    </tr>
  </thead>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= link_to 'Show', test  %></td>
      <td><%= link_to 'Edit', (edit_test_path test) %><td>

      <td><%= link_to 'Delete', test,
        method: :delete,
        data: { confirm: "You sure?"  } %></td>
    </tr>
  <% end %>
  </table>

